@using VidleyMVC.Models
@model IEnumerable<VidleyMVC.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Customers</h2>

<h3>Customers</h3>

@if (!Model.Any())
{
    <p>Empty Customer Lists</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thread>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thread>
        <tbody>
        @foreach (var cust in Model)
        {
            <tr>

                <td>@Html.ActionLink(cust.Name, "Details", "Customer", new { id = cust.Id }, null)</td>
                <td>@cust.MembershipType.NameOfMembershipType</td>
            </tr>

        }
        </tbody>

    </table>
}
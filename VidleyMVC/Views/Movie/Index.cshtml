@model IEnumerable<VidleyMVC.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="btn btn-primary">@Html.ActionLink("NEW MOVIE", "New", "Movie", new {@style="color:white; font-weight:bold;"})</div>

@if (!Model.Any())
{
    <p>Empty Movie Lists</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var cust in Model)
        {
            <tr>
                <td>@Html.ActionLink(cust.Title, "Details", "Movie", new {id = cust.Id}, null)</td>
                <td>@cust.GenreType.Genre</td>
            </tr>
        }
        </tbody>
    </table>
}
